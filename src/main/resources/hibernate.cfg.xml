<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.url">
            jdbc:h2:tcp://localhost/~/reverse</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password"></property>
        <property name="hibernate.connection.pool_size">10</property>
        <property name="show_sql">true</property>
        <property name="dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="hibernate.hbm2ddl.auto">create</property>
        <mapping class="jio.codeanalysis.java.model.JavaType" />
        <mapping class="jio.codeanalysis.java.model.JavaMethod" />
        <mapping class="jio.codeanalysis.java.model.JavaParameter" />
        <mapping class="jio.codeanalysis.java.model.CallRelation" />
    </session-factory>
</hibernate-configuration>
